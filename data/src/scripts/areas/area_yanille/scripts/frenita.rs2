    case 1 : {
        if (stat_base(cooking) > 59){
            ~openshop_activenpc;
        } else {
            ~chatnpc("<p,neutral>Sorry, you need to have a cooking skill of 60 to access my shop!");
            return;
        }
    }
    case 2 : ~chatplayer("<p,neutral>No thank you."); 
}