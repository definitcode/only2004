[ai_queue3,bandit]
if (npc_findhero = false) {
    return;
}
if(npc_findhero = true) { // happens before npc_death
    queue(bandit_kill, 0);
}
gosub(npc_death);
// Default drop from config.
obj_add(npc_coord, npc_param(death_drop), 1, ^lootdrop_duration);

def_int $random = random(128);

if ($random < 4) {
    obj_add(npc_coord, iron_scimitar, 1, ^lootdrop_duration);
} else if ($random < 6) {
    obj_add(npc_coord, steel_sq_shield, 1, ^lootdrop_duration);
} else if ($random < 7) {
    obj_add(npc_coord, steel_axe, 1, ^lootdrop_duration);
} else if ($random < 10) {
    obj_add(npc_coord, chaosrune, 6, ^lootdrop_duration);
} else if ($random < 13) {
    obj_add(npc_coord, waterrune, 9, ^lootdrop_duration);
} else if ($random < 15) {
    obj_add(npc_coord, airrune, 10, ^lootdrop_duration);
} else if ($random < 17) {
    obj_add(npc_coord, deathrune, 2, ^lootdrop_duration);
} else if ($random < 19) {
    obj_add(npc_coord, lawrune, 3, ^lootdrop_duration);
} else if ($random < 20) {
    if (map_members = true) {
        obj_add(npc_coord, bloodrune, 2, ^lootdrop_duration);
    }
} else if ($random < 21) {
    obj_add(npc_coord, mindrune, 2, ^lootdrop_duration);
} else if ($random < 22) {
    obj_add(npc_coord, naturerune, 2, ^lootdrop_duration);
} else if ($random < 59) {
    obj_add(npc_coord, ~randomherb, ^lootdrop_duration);
} else if ($random < 85) {
    obj_add(npc_coord, coins, 350, ^lootdrop_duration);
} else if ($random < 98) {
    obj_add(npc_coord, coins, 120, ^lootdrop_duration);
} else if ($random < 108) {
    obj_add(npc_coord, coins, 530, ^lootdrop_duration);
} else if ($random < 115) {
    obj_add(npc_coord, coins, 1000, ^lootdrop_duration);
} else if ($random < 117) {
    obj_add(npc_coord, coins, 800, ^lootdrop_duration);
} else if ($random < 123) {
    obj_add(npc_coord, coal, 1, ^lootdrop_duration);
} else if ($random < 126) {
    obj_add(npc_coord, ~randomjewel, ^lootdrop_duration);
} else if ($random < 127) {
    obj_add(npc_coord, ~mid_tier_items, ^lootdrop_duration);
}

[queue,bandit_kill]
mes("You scratch a notch on your bow for the kill.");
%bandit_kc = calc(%bandit_kc + 1);