[ai_queue3,giant_rat1] @rat_droptable;
[ai_queue3,giant_rat2] @rat_droptable;


[label,rat_droptable]

gosub(npc_death);
if (npc_findhero = false) {
    return;
}

obj_add(npc_coord, npc_param(death_drop), 1, ^lootdrop_duration);
if (%hunter > 349) {
    obj_add(npc_coord, raw_rat_meat, 4, ^lootdrop_duration);
    if (%e_ctoggle = ^e_toggle_on) {
        mes("[4x] Resources!");
    }
} else if (%hunter > 189) {
    obj_add(npc_coord, raw_rat_meat, 2, ^lootdrop_duration);
    if (%e_ctoggle = ^e_toggle_on) {
        mes("[2x] Resources!");
    }
} else {
    obj_add(npc_coord, raw_rat_meat, 1, ^lootdrop_duration);
}