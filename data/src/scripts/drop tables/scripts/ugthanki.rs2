[ai_queue3,ugthanki]
if (npc_findhero = false) {
    return;
}
if (npc_findhero = true) {
    queue(ugthanki_kill, 0);
}
gosub(npc_death);

// Default drop from config.
obj_add(npc_coord, npc_param(death_drop), 1, ^lootdrop_duration);

// Normal drop
obj_add(npc_coord, raw_ugthanki_meat, 1, ^lootdrop_duration);


[queue,ugthanki_kill]
mes("You scratch a notch on your bow for the kill.");
%ugthanki_kc = calc(%ugthanki_kc + 1);