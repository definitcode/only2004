[ai_queue3,hellhound]
gosub(npc_death);
if (npc_findhero = false) {
    return;
}

def_int $random = random(128);

// Tertiary
~trail_hardcluedrop(64, npc_coord);
obj_add(npc_coord, npc_param(death_drop), 1, ^lootdrop_duration);

if ($random < 120) {
    obj_add(npc_coord, macro_genilamp, 1, ^lootdrop_duration);
}