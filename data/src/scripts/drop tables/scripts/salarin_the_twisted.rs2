[ai_queue2,salarin_the_twisted]
// todo: seems to be approx 1/6 based off my testing, but try to confirm 
if(random(6) = 0 & last_int = 0) {
    npc_say("Your pitiful attacks cannot hurt me!");
}
~npc_default_damage(last_int);

[ai_queue3,salarin_the_twisted]
if (npc_findhero = false) {
    return;
}
if (npc_findhero = true) {
    queue(salarin_kill, 0);
}
gosub(npc_death);
// Default drop from config.
obj_add(npc_coord, npc_param(death_drop), 1, ^lootdrop_duration);
//obj_add(npc_coord, hard_boss_token, 1, ^lootdrop_duration);
def_int $random = random(128);

if ($random < 1) {
    obj_add(npc_coord, black_dagger, 1, ^lootdrop_duration);
} else if ($random < 6) {
    obj_add(npc_coord, waterrune, 12, ^lootdrop_duration);
} else if ($random < 10) {
    obj_add(npc_coord, lawrune, 25, ^lootdrop_duration);
} else if ($random < 11) {
    obj_add(npc_coord, naturerune, 30, ^lootdrop_duration);
} else if ($random < 12) {
    obj_add(npc_coord, firerune, 75, ^lootdrop_duration);
} else if ($random < 51) {
    obj_add(npc_coord, ~randomherb, ^lootdrop_duration);
    obj_add(npc_coord, ~randomjewel, ^lootdrop_duration);
    obj_add(npc_coord, ~grindingtable, ^lootdrop_duration);
} else if ($random < 56) {
    obj_add(npc_coord, white_berries, 1, ^lootdrop_duration);
} else if ($random < 57) {
    obj_add(npc_coord, snape_grass, 1, ^lootdrop_duration);
} else if ($random < 58) {
    obj_add(npc_coord, vial_water, 1, ^lootdrop_duration);
} else if ($random < 63) {
    obj_add(npc_coord, coins, 75, ^lootdrop_duration);
    obj_add(npc_coord, ~randomjewel, ^lootdrop_duration);
    obj_add(npc_coord, ~grindingtable, ^lootdrop_duration);
} else if ($random < 66) {
    obj_add(npc_coord, coins, 500, ^lootdrop_duration);
} else if ($random < 69) {
    obj_add(npc_coord, coins, 255, ^lootdrop_duration);
} else if ($random < 80) {
    obj_add(npc_coord, 1dose2defense, 1, ^lootdrop_duration);
} else if ($random < 90) {
    obj_add(npc_coord, sinister_key, 1, ^lootdrop_duration);
    obj_add(npc_coord, ~grindingtable, ^lootdrop_duration);
} else if ($random < 91) {
    obj_add(npc_coord, ~randomjewel, ^lootdrop_duration);
    obj_add(npc_coord, ~grindingtable, ^lootdrop_duration);
} else if ($random < 127) {
    obj_add(npc_coord, ~high_tier_items, ^lootdrop_duration);
}

[queue,salarin_kill]
if (%e_ctoggle = ^e_toggle_on){
    mes("You etch another tally into your ledger.");
}
%salarin_the_twisted_kc = calc(%salarin_the_twisted_kc + 1);