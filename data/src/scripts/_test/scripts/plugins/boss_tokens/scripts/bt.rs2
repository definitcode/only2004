[proc,bt_taskmenu]
if (%bt_task_status = ^bt_on_task){
    def_int $c2 = (~p_choice4_header("Task Status.", 1, "Cancel Task.", 2, "View KC.", 3,"Nothing.", 4,"What would you like to do?"));
    switch_int($c2){
        case 1 : ~bt_taskstatus;
        case 2 : ~bt_cancel_task;
        case 3 : ~bt_view_kc;
        case 4 : ~chatnpc("Thank you for coming by!");
    }
} else if (%bt_task_status = ^bt_off_task) {
    def_int $c2 = (~p_choice3_header("New Task.", 1, "View KC.", 2, "Go Back.", 3, "What would you like to do?"));
    switch_int($c2){
        case 1 : ~bt_newtask;
        case 2 : ~bt_view_kc;
        case 3 : ~bt_main_menu;
    }
    

}

