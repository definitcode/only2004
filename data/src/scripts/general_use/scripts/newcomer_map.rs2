    case 1 : ~mesbox("Your Intelligence Level: <tostring(%intelligence)>");
    case 2 : ~mesbox("Your Hunter Level: <tostring(%hunter)>");
    case 3 : ~mesbox("Your Engineering Level: <tostring(%engineering)>");
    case 4 : ~mesbox("Your Rogue Level: <tostring(%rogue)>");
    case 5 : ~mesbox("Your Prestige Level: <tostring(%prestige)>");
}